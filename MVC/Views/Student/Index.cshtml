@model IEnumerable<MVC.Models.StudentModel>

@{
    ViewBag.Title = "Student List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Student", new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>City</th>
            <th>Age</th>
            <th>Contact</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => student.Name)</td>
                <td>@Html.DisplayFor(m => student.City)</td>
                <td>@Html.DisplayFor(m => student.Age)</td>
                <td>@Html.DisplayFor(m => student.Contact)</td>
                <td>@Html.DisplayFor(m => student.Gender)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Student", new { id = student.Id }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Delete", "Delete", "Student", new { id = student.Id }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Are you sure you want to delete this student?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
